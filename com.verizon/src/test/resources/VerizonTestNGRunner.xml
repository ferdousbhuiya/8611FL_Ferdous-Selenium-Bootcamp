<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Verizon" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://verizon.com"/>


<test name="test">
    
    <classes>
        <class name="TestFiles.HomePageTest"></class>
        <class name="TestFiles.AddItemsToCartTest"></class>
        <class name="TestFiles.SearchingTest"></class>
        <class name="TestFiles.LanguageChangeTest"></class>
        <class name="TestFiles.NavigationToAppleMusicPageTest"></class>
        <class name="TestFiles.FindStoreLocationTest"></class>


    </classes>
</test>
</suite>
