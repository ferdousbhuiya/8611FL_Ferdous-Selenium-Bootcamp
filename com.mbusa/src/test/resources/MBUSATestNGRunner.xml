<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="MBUSA" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://mbusa.com"/>

    <test name="test">
        <classes>
            <class name="TestFiles.IndexPageTest"></class>
            <class name="TestFiles.LoginTest"></class>
            <class name="TestFiles.InventoryTest"></class>
            <class name="TestFiles.SpecialOfferTest"></class>
            <class name="TestFiles.NewAccountRegistrationTest"></class>
            <class name="TestFiles.CustomerSupportTest"></class>
            <class name="TestFiles.ShoppingAccessoriesTest"></class>
            <class name="TestFiles.SearchTest"></class>
        </classes>
    </test>


</suite>
